{
	"src": "./src/",
	"static": "./static/",
	"public": "./tmp/public/",
	"library": "./deploy/library",
	"craft": "./deploy/",

	"images": "**/*.+(jpg|jpeg|png|gif|webp)",
	"css": "**/*.css",
	"svgs": "**/*.svg",

	"cacheTag": {
		"file": "_layout.twig",
		"dir": "./deploy/templates/wrapper"
	},

	"fractal": {
		"partials": "_partials",
		"templates": "templates/**/**/**/**/**/**/*.twig",
		"exclude": ["templates/wrapper/**.twig", "templates/05-pages/**/*.twig"],
		"craftOutput": "templates/_partials"
	},

	"symbols": {
		"src": "**/ui-*.svg",
		"scss": "scss/framework",
		"html": "./src/templates/svgs"
	},

	"js": {
		"src": "js",
		"dest": "dist/js",
		"libs": ["./node_modules/picturefill/dist/picturefill.min.js"]
	},

	"scss": {
		"src": ["scss/**/**/*.scss", "templates/**/**/*.scss"],
		"dest": "dist/css"
	},

	"files": {
		"exclude": "**/*.+(jpg|jpeg|png|gif|svg|css|js)",
		"dotFiles": ".*",
		"include": "**/*.*"
	}
}
