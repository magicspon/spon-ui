{
	"src": "./src/",
	"static": "./static/",
	"public": "./tmp/public/",
	"library": "./deploy/library",
	"craft": "./deploy/",

	"images": "**/*.+(jpg|jpeg|png|gif|webp)",

	"svgs": "**/*.svg",

	"fractal": {
		"partials": "_partials",
		"templates": "templates/**/**/*.twig",
		"exclude": ["**/_*.twig"]
	},

	"symbols": {
		"src": "**/ui-*.svg",
		"scss": "scss/_system/gulp-output",
		"html": "./src/templates/wrapper"
	},

	"js": {
		"src": "js",
		"dest": "dist/js",
		"libs": ["./node_modules/picturefill/dist/picturefill.min.js"]
	},

	"scss": {
		"src": ["scss/**/**/*.scss", "templates/**/**/*.scss"],
		"dest": "dist/css"
	},

	"files": {
		"exclude": "**/*.+(jpg|jpeg|png|gif|svg|css|js)",
		"dotFiles": ".*",
		"include": "**/*.*"
	}
}
